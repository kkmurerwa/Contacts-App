<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="24sp">


    <TextView
            android:text="1"
            android:textStyle="bold"
            android:textSize="50sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/textView_number"/>

    <TextView
            android:text="Ezra Kanake"
            android:layout_width="135dp"
            android:layout_marginStart="76dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/textView_number"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/contactsaved_as"
            app:layout_constraintVertical_bias="0.466"/>
    <TextView
            android:text="10kanake@gmail.com"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:id="@+id/save_email_address"
            tools:layout_editor_absoluteY="340dp"
            tools:layout_editor_absoluteX="107dp"
            tools:ignore="MissingConstraints"/>
    <TextView
            android:text="+2547 96547118"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:id="@+id/save_contact_as"
            tools:layout_editor_absoluteY="359dp"
